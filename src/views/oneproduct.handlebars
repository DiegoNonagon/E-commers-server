<section class="d-flex flex-wrap justify-content-center gap-3">
  <div class="card" style="width: 17rem; margin: 2rem;">
    <img
      src={{one.photo}}
      class="card-img-top"
      width="80px"
      height="270px"
      alt="Cerveza"
    />
    <div class="card-body">
      {{#if one.title}}
        <h5 class="card-title">{{one.title}}</h5>
      {{else}}
        <h5>Producto sin nombre</h5>
      {{/if}}
    </div>
    <ul class="list-group list-group-flush">
      {{#if one.category}}
        <li class="list-group-item">{{one.category}}</li>
      {{else}}
        <li class="list-group-item">Producto sin categor√≠a</li>
      {{/if}}
      {{#if one.stock}}
        <li class="list-group-item">{{one.stock}} u.</li>
      {{else}}
        <li class="list-group-item">0 u.</li>
      {{/if}}
      {{#if one.price}}
        <li class="list-group-item">$ {{one.price}}</li>
      {{else}}
        <li class="list-group-item">$ .-</li>
      {{/if}}
    </ul>
    <div class="card-body">
      <button type="button" class="btn btn-warning">Agregar al carrito</button>
    </div>
  </div>
</section>